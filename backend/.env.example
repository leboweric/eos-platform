# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# SendGrid Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Application Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (for email links and CORS)
FRONTEND_URL=https://your-frontend-url.com

# CORS Configuration
CORS_ORIGIN=https://your-frontend-url.com

# OpenAI Configuration (Optional - for AI features)
OPENAI_API_KEY=your-openai-api-key

# Meeting Mode Configuration (Feature Flag)
# Set to 'true' to enable collaborative meeting features with real-time presence and navigation sync
ENABLE_MEETINGS=true

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000# Admin notification email for new signups
ADMIN_NOTIFICATION_EMAIL=elebow@bmhmn.com
